@model IList<Services.Models.PrestamoModels.PrestamoModel>

@{
    ViewData["Title"] = "Préstamos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Listado de Préstamos</h2>
    <a asp-action="AddPrestamo" asp-controller="Prestamo" class="btn btn-primary">Registrar Préstamo</a>
</div>

@if (Model == null || Model.Count == 0)
{
    <div class="alert alert-info">No hay préstamos registrados aún.</div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>Usuario</th>
                <th>Equipo</th>
                <th>Fecha Préstamo</th>
                <th>Fecha Devolución</th>
                <th>Estado</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.UsuarioNombre</td>
                    <td>@p.EquipoSerial</td>
                    <td>@p.FechaInicio.ToShortDateString()</td>
                    <td>@p.FechaFin.ToShortDateString()</td>
                    <td>@p.Estado</td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@p.Id">Editar</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@p.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
