@model IList<Services.Models.UsuarioModels.UsuarioModel>

@{
    ViewData["Title"] = "Usuarios";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Listado de Usuarios</h2>
    <a asp-action="AddUsuario" asp-controller="Usuario" class="btn btn-primary">Agregar Usuario</a>
</div>

@if (Model == null || Model.Count == 0)
{
    <div class="alert alert-info">No hay usuarios registrados aún.</div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>Nombre</th>
                <th>Correo</th>
                <th>Rol</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in Model)
            {
                <tr>
                    <td>@usuario.Nombre</td>
                    <td>@usuario.Email</td>
                    <td>@usuario.Rol</td>
                    <td class="text-center">
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@usuario.Id">Editar</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@usuario.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
