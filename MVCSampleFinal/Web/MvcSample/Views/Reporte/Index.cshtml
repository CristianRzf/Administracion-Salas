@model IList<Services.Models.ReporteModels.ReporteModel>

@{
    ViewData["Title"] = "Reportes";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Listado de Reportes</h2>
    <a asp-action="AddReporte" class="btn btn-primary">Crear Reporte</a>
</div>

@if (Model == null || Model.Count == 0)
{
    <div class="alert alert-info">No hay reportes registrados aún.</div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>Tipo</th>
                <th>Estado</th>
                <th>Descripción</th>
                <th>Fecha</th>
                <th>Usuario</th>
                <th>Sala</th>
                <th>Equipo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.Tipo</td>
                    <td>@r.Estado</td>
                    <td>@r.Descripcion</td>
                    <td>@r.Fecha.ToShortDateString()</td>
                    <td>@r.UsuarioNombre</td>
                    <td>@r.SalaNombre</td>
                    <td>@r.EquipoSerial</td>
                    <td>
                        <a class="btn btn-sm btn-warning">Editar</a>
                        <a class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
