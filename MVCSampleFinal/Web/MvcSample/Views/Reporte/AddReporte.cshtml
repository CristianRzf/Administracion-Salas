@model Services.Models.ReporteModels.AddReporteModel

@{
    ViewData["Title"] = "Crear Reporte";
}

<h2>Crear Reporte</h2>

<form asp-action="AddReporte" method="post" class="mt-4">

    <div class="mb-3">
        <label asp-for="Tipo" class="form-label"></label>
        <select asp-for="Tipo" class="form-select">
            <option value="">Seleccione...</option>
            <option value="Sala">Sala</option>
            <option value="Equipo">Equipo</option>
        </select>
        <span asp-validation-for="Tipo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="UsuarioId" class="form-label"></label>
        <input asp-for="UsuarioId" class="form-control" />
        <span asp-validation-for="UsuarioId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SalaId" class="form-label"></label>
        <input asp-for="SalaId" class="form-control" />
        <span asp-validation-for="SalaId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EquipoId" class="form-label"></label>
        <input asp-for="EquipoId" class="form-control" />
        <span asp-validation-for="EquipoId" class="text-danger"></span>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
