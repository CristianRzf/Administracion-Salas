@model IList<Services.Models.SalaModels.SalaModel>

@{
    ViewData["Title"] = "Salas";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Listado de Salas</h2>
    <a asp-action="AddSala" asp-controller="Sala" class="btn btn-primary">Agregar Sala</a>
</div>

@if (Model == null || Model.Count == 0)
{
    <div class="alert alert-info">No hay salas registradas aún.</div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>Nombre</th>
                <th>Capacidad</th>
                <th>Ubicación</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sala in Model)
            {
                <tr>
                    <td>@sala.Nombre</td>
                    <td>@sala.Capacidad</td>
                    <td>@sala.Ubicacion</td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@sala.Id">Editar</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@sala.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
