@model Services.Models.SalaModels.AddSalaModel

@{
    ViewData["Title"] = "Agregar Sala";
}

<h2>Agregar Sala</h2>

<form asp-action="AddSala" method="post" class="mt-4">

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Capacidad" class="form-label"></label>
        <input asp-for="Capacidad" class="form-control" type="number" />
        <span asp-validation-for="Capacidad" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Ubicacion" class="form-label"></label>
        <input asp-for="Ubicacion" class="form-control" />
        <span asp-validation-for="Ubicacion" class="text-danger"></span>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
